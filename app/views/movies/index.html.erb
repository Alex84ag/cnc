<h1>Listing movies</h1>

<table>
  <thead>
    <tr>
      <th>Tt</th>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @movies.each do |movie| %>
		<%data= JSON.load(open("http://api.tanktop.tv/api/1/eyJzZXJ2aWNlX2lkIjoxN30:1XKPst:glE97qRYa7ziwUHZN94AIjt5a3U/movie/"+movie.tt_id.to_s)) %>
		<%url=JSON.load(open("http://www.omdbapi.com/?i=&t="+URI.encode(data['films'][0]['title'])))%>
      <tr>
        <td><%= movie.tt_id %></td>
        <td><%= data['films'][0]['title'] %></td>
		<td><%= url %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie)%></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

